
<%= form_with scope: :articles, url: articles_path, html:{multipart: true}, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'form-control' %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div class="form-group">
    <%= form.label :summary %><br>
    <%= form.text_area :summary, class: 'form-control' %>
    <% @article.errors.full_messages_for(:summary).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: 'form-control' %>
    <% @article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
  </div>

  <br/>
  <div class="form-group">
  <%= form.label :all_tags %>
  <%= form.text_field :all_tags, class: 'form-control' %>
  </div>

  <br/>
  <div class="form-group">
    <%= form.file_field :image, class: 'form-control' %>
    <% @article.errors.full_messages_for(:image).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>
  <br/>

  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
  </div>
<% end %>