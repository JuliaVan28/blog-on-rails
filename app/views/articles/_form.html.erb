
<% if @article.errors.any? %>
<div class="alert alert-danger">
  <h5><%= t('common.errors') %></h5>
  <ul>
    <% @article.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with scope: :articles, url: articles_path, html:{multipart: true}, local: true do |form| %>
  <div class="form-group">
    <%= form.label :title %><br>
    <%= form.text_field :title, class: 'form-control' %>
    
  </div>

  <div class="form-group">
    <%= form.label :summary %><br>
    <%= form.text_area :summary, class: 'form-control' %>
    
  </div>

  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class: 'form-control' %>
    >
  </div>

  <br/>
  <div class="form-group">
  <%= form.label :all_tags %>
  <%= form.text_field :all_tags, class: 'form-control' %>
  </div>

  <br/>
  <div class="form-group">
    <%= form.file_field :image, class: 'form-control' %>
    
  </div>
  <br/>

  <div class="form-group">
    <%= form.submit 'Save', class: 'btn btn-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-secondary' %>
  </div>
<% end %>